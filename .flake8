[flake8]
max-line-length = 119
max-complexity = 18

inline-quotes = double
multiline-quotes = double
docstring-quotes = double

extend-ignore =
    E203,
    W503,
    ANN101,
    ANN102

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    alembic

per-file-ignores =
    __init__.py:F401
    alembic/env.py:F401,E501
    */schemas/*.py:VNE003
    */models/*.py:VNE003,F821